<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coral.co.coralin.PreRegisterScreenActivity"
    android:background="@drawable/ic_app_background">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/dividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnFBLogin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEmailRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/button_shape_no_fill"
        android:text="Registrate con Facebook"
        android:drawableRight="@drawable/ic_fb"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnEmailRegister"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerHorizontal"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_mail"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_shape_no_fill"
        android:text="Registrarse con Correo"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
