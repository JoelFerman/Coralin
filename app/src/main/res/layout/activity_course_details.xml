<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    tools:context="coral.co.coralin.CourseDetailsActivity">

    <ImageView
        android:id="@+id/img_course1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_course1_img" />

    <TextView
        android:id="@+id/txt_description_course1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/img_course1"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="20dp"
        android:text="@string/course1details" />

    <Button
        android:id="@+id/btnCourseRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_button"
        android:text="Registrarse"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
