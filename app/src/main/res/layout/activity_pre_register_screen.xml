<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    tools:context="coral.co.coralin.PreRegisterScreenActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/dividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnFBLogin"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnEmailRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_facebook_register" />

    <Button
        android:id="@+id/btnEmailRegister"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/dividerHorizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_email_register" />

</RelativeLayout>
