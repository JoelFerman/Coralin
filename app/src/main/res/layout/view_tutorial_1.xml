<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tut1DividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tut1DividerVertical"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/imgTutorial1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tut1DividerHorizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_tutorial_1" />

    <ImageView
        android:id="@+id/coralinTip1"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_below="@+id/tut1DividerHorizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/tut1DividerVertical"
        android:src="@drawable/ic_coral_pet" />

    <ImageView
        android:id="@+id/tut1Tooltip"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tut1DividerHorizontal"
        android:layout_toRightOf="@+id/tut1DividerVertical"
        android:src="@drawable/ic_tooltip_1" />

    <TextView
        android:id="@+id/txtTutorial1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tut1Tooltip"
        android:layout_below="@+id/tut1DividerHorizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/tut1DividerVertical"
        android:gravity="center"
        android:text="Aprende a Programar Jugando"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>